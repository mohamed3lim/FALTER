void moveForward(){
    
//     int x = (int) (*output_desired_yaw * (180/PI));
    int x = angle;

    if(flag == 1){
        step = 1;
        start = counter;
        switch (x) {
            case 0:
                *output_x = *output_x - 0.5;
                break;
            case 180:
                *output_x = *output_x + 0.5;
                break;
            case (90):
                *output_y = *output_y + 0.5;
                break;
            case (270):
                *output_y = *output_y - 0.5;
                break;
            case 45:
                *output_x = *output_x - 0.5;
                *output_y = *output_y + 0.5;
                break;
            case 135:
                *output_x = *output_x + 0.5;
                *output_y = *output_y + 0.5;
                break;
            case 225:
                *output_x = *output_x + 0.5;
                *output_y = *output_y - 0.5;
                break;
            case 315:
                *output_x = *output_x - 0.5;
                *output_y = *output_y - 0.5;
              break;
            default:
              // write here code for angles 45 later on
              break;
        }

        flag = 2;
    }
    
    if(flag = 2){
        elapsed = counter - start;
        nickControl();

        if(elapsed > 20){
            flag = 1;
            step = 2;
            next ++;
        }
    }

}

