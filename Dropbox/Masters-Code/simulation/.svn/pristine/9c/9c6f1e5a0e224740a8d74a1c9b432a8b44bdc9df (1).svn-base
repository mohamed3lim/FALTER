void moveVertical(double desiredHeight){
        

    *output_elevation = 0.12 + desiredHeight;
    
    if((*output_gas - *input_z_pid) > 50.0){
        *output_gas = *output_gas - 50.0;
    }
    else{
        if((*output_gas - *input_z_pid) < -50.0){
            *output_gas = *output_gas + 50.0;
        }
        else{
            *output_gas = *input_z_pid;
        }
    }
}
